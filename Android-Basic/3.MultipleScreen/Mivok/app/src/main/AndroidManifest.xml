<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.burningdzire.mivok">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NumberActivity"
            android:label="@string/NumberActivity"
            android:parentActivityName=".MainActivity"></activity>

        <activity
            android:name=".FamilyActivity"
            android:label="@string/FamilyActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".ColorActivity"
            android:label="@string/ColorActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".PhrasesActivity"
            android:label="@string/PhrasesActivity"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>